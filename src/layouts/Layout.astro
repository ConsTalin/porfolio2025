---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
// Supports weights 100-900
import '@fontsource-variable/onest';
interface Props{
	title: string;
	description: string;
}
const { description, title } = Astro.props;
---





<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content = {Astro.prop}/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="favicon.ico" type="image/x-icon">
		<meta name="generator" content={Astro.generator} />
		<title>Constanza Talin</title>
	</head>
	<body >
		<Header/>
		<slot />
		<Footer/>
		<script is:inline>
			const header = document.querySelector('header');

			window.addEventListener('scroll', () => {
				if (window.scrollY > 20) {
				header.classList.add('backdrop-blur-md', 'font-medium','text-black', 'bg-white/60', 'shadow-md');
				} else {
				header.classList.remove('backdrop-blur-md','font-medium', 'text-black','bg-white/60', 'shadow-md');
				}
			});
		</script>
	</body>
</html>

<style is:global>
	*{
		color-scheme: light dark;
	}

	html{
		
		font-family: 'Onest', sans-serif;
		scroll-behavior: smooth;
	}
	body {
		display: flex;
		flex-direction: column;
		justify-content: center;
		color: white;
		background: black;
		min-height: 100vh;
		
		
	}

	@media (width < 48rem){
		p{
			font-size: 0.9rem;
		}
	}
	

	@media(prefers-reduced-motion: reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>
