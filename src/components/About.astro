---





{
    ABOUT.map(({ description1, description2, description3, tags}) =>(
        <article class="text-white/80 mt-10 mb-5">
            
            
            <div class="flex flex-col gap-y-2.5">
                <p>{description1}</p>
                <p>{description2}</p>
                <p>{description3}</p>
            </div>
            <ul class="flex gap-x-4 flex-row">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 items-center rounded-full text-sm ${tag.class}mt-4 py-1 px-2 md:py-2 md:px-2 mt-3`}>
                        <tag.icon class="size-4" />
                        {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
        </article>
    ))
}



            